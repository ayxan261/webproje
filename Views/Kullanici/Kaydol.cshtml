
@{
    Layout = null;
}

@model webprojesi.Models.Entity.Kullanicilar
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kullanici Kayit Sayfasi</title>


    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <link href="~/css/styledanger.css" rel="stylesheet" />
</head>
<body class="container col-md-7">
    <br />
    @using (Html.BeginForm("Kaydol", "Kullanici", FormMethod.Post))
    {

        <div style="height:50px; background-color:#0094ff; color:white; text-align:center; font-size:30px">
            <p style="margin-top:auto;margin-bottom:auto">Kullanici Kaydet Sayfasi</p>
        </div>
        <div style="margin-top:20px;">
            @Html.LabelFor(x => x.KullaniciAdi)
            @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.KullaniciAdi, null, new { @class = "text-danger" })

        </div>
        <div style="margin-top:20px;">
            @Html.LabelFor(x => x.Sifre)
            @Html.PasswordFor(x => x.Sifre, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Sifre, null, new { @class = "text-danger" })

        </div>
        <div style="margin-top:20px;">
            @Html.LabelFor(x => x.AdiSoyadi)
            @Html.TextBoxFor(x => x.AdiSoyadi, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.AdiSoyadi, null, new { @class = "text-danger" })

        </div>
        <div style="margin-top:20px;">
            @Html.LabelFor(x => x.Telefon)
            @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Telefon, null, new { @class = "text-danger" })

        </div>
        <div style="margin-top:20px;">
            @Html.LabelFor(x => x.Adres)
            @Html.TextAreaFor(x => x.Adres, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Adres, null, new { @class = "text-danger" })

        </div>
        <div style="margin-top:20px;">
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })

        </div>
        <div style="margin-top:20px;">
            @Html.LabelFor(x => x.Tarih)
            @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(x => x.Tarih, null, new { @class = "text-danger" })

        </div>
        <div style="margin-top:20px">
            <button class="form-control btn btn-primary">Kaydol</button>
        </div>
    }

</body>

</html>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


