
@{
    ViewBag.Title = "GuncelBilgiGetir";
    Layout = "~/Views/_Layout.cshtml";
}

@model webprojesi.Models.Entity.Kategoriler



<form class="form-group" action="/Kategoriler/Guncelle" method="post">
    <h2>Guncelleme sayfasi</h2>
    <br />
    <div class="container">

        @Html.HiddenFor(m=>m.ID)
        <br />
        <label>Birim adi:</label>
        @Html.TextBoxFor(m => m.Kategori, new { @class = "form-control" })
        <br />
        <label>Aciklama:</label>
        @Html.TextAreaFor(m => m.Aciklama, new { @class = "form-control" })
        <br />
        <button class="btn btn-info" style="margin-top:20px;">Kaydet</button>
    </div>
</form>

